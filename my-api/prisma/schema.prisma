generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"

}


datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  firstName    String
  lastName     String
  avatar       String?  
  password     String    
  hashedRefreshToken String?
  phoneNumber  String?   @unique
  countryCode  String?   
  role         Role      @default(USER)
  address      Address?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Address {
  id        Int    @id @default(autoincrement())
  country   String
  state     String?
  city      String?
  street    String?
  userId    Int?     @unique
  user      User?    @relation(fields: [userId], references: [id])
  agencyId Int? @unique
  agency Agency? @relation(fields: [agencyId],references: [id])
  rentalProviderId Int? @unique
  rentalProvider RentalProvider? @relation(fields: [rentalProviderId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}

model Agency{
    id        Int    @id @default(autoincrement())
    logo String
    name String
    email String @unique
    phone String
    address Address?
    introduction String
}
model RentalProvider{
    id        Int    @id @default(autoincrement())
    logo String
    name String
    email String @unique
    phone String
    address Address?
    introduction String
}