generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  firstName          String
  lastName           String
  avatar             String?
  password           String
  hashedRefreshToken String?
  phoneNumber        String?  @unique
  countryCode        String?
  role               Role     @default(USER)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  address            Address?
}

model Address {
  id               Int             @id @default(autoincrement())
  country          String
  state            String?
  city             String?
  street           String?
  userId           Int?            @unique
  agencyId         Int?            @unique
  rentalProviderId Int?            @unique
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  agency           Agency?         @relation(fields: [agencyId], references: [id])
  rentalProvider   RentalProvider? @relation(fields: [rentalProviderId], references: [id])
  user             User?           @relation(fields: [userId], references: [id])
}

model Agency {
  id           Int      @id @default(autoincrement())
  logo         String
  name         String
  email        String   @unique
  phone        String
  introduction String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  address      Address?
}

model RentalProvider {
  id           Int      @id @default(autoincrement())
  logo         String
  name         String
  email        String   @unique
  phone        String
  introduction String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  address      Address?
}

enum Role {
  ADMIN
  USER
}
